<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <i class="bi bi-twitter fs-1"></i>
    <h2 class="h3 mb-3 fw-normal">Sign up</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-floating">
      <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
      <%= f.label :email, "Email address" %>
    </div>

    <div class="field form-floating">
    <%= f.password_field :password, class: "form-control", placeholder: "Password (minimum #{@minimum_password_length} characters)", autocomplete: "new-password" %>
    <%= f.label :password %>
    </div>

    <div class="field form-floating">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", autocomplete: "new-password" %>
      <%= f.label :password_confirmation %><br />
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary w-100 py-2"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</main>