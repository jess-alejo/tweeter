<header>
  <div class="d-flex flex-column justify-content-between h-100 me-4" style="width: 260px;">
    <div class="main-nav">
      <div class="navbrand mt-2 mb-3 ps-3">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <i class="bi bi-twitter fs-2"></i>
        </a>
      </div>

      <ul class="nav nav-pills flex-column mb-auto fs-5">
        <li class="nav-item">
          <a href="#" class="nav-link text-white" aria-current="page">
            <i class="bi bi-house-fill me-2 fs-3"></i>
            Home
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-hash me-2 fs-3"></i>
            Explore
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-bell me-2 fs-3"></i>
            Notifications
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-envelope me-2 fs-3"></i>
            Messages
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-bookmark me-2 fs-3"></i>
            Bookmarks
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-person me-2 fs-3"></i>
            Profile
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">
            <i class="bi bi-three-dots me-2 fs-3"></i>
            More
          </a>
        </li>
      </ul>

      <%# CTA Tweet %>
      <div class="d-grid">
        <%= link_to "Tweet", new_tweet_path, class: "btn btn-primary btn-lg mt-3 mb-5 rounded-5" %>
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="dropdown mb-5">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://avatars.githubusercontent.com/u/25943867?s=40&v=4" alt="" width="32" height="32" class="rounded-circle me-2">
          <strong>
            <%= current_user.email.split("@").first %>
          </strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
          <li><a class="dropdown-item" href="#">New project...</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, class: "dropdown-item", data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</header>
