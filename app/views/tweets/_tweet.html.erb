<div id="<%= dom_id tweet %>">

  <div class="user-details">
  <p>
    <%= image_tag(tweet.user.avatar_url, class: "rounded-circle", alt: "avatar") %>
    <strong><%= tweet.user.username %> | <%= time_ago_in_words(tweet.created_at) %> ago</strong>
  </p>

  <p>
    <strong>Body:</strong>
    <%= tweet.body %>
  </p>

  </div>

</div>
